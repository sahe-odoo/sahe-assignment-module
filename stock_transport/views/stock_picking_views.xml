<odoo>
    <record id="inherited_stock_picking_view_form" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.stock.transport</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']//field[@name='company_id']" position="after">
                <field name="total_volume"
                    readonly="1"
                    options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>

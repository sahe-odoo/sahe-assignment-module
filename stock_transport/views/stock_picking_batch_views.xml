<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_stock_picking_batch_view_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.view.form.inherit.stock.transport</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dock_id"/>
                <field name="vehicle_id" placeholder="Third Party Provider"/>
                <field name="vehicle_category_id" placeholder="e.g. Semi-truck"/>
                <field name="weight" widget="progressbar" invisible="not vehicle_category_id"/>
                <field name="volume" widget="progressbar" invisible="not vehicle_category_id"/>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_batch_graph_view" model="ir.ui.view">
        <field name="name">stock.picking.batch.graph.view</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph string="Vehicle Graph" sample="1">
                <field name="scheduled_date" type="row" interval="day"/>
                <field name="vehicle_category_id" type="column"/>
            </graph>
        </field>
    </record>

    <record id="stock_picking_batch_gantt_view" model="ir.ui.view">
        <field name="name">stock.picking.batch.gantt.view</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <gantt date_start="scheduled_date" date_stop="scheduled_date" default_group_by="dock_id,vehicle_id"
                default_scale="week" color="vehicle_id" precision="{'week': 'day:full'}" decoration-info="state=='draft'">
                <field name="volume"/>
                <field name="state"/>
                <templates>
                    <div t-name="gantt-popover">
                        <div><strong>Date â€” </strong><t t-esc="scheduled_date.toFormat('f')"/></div>
                        <div><t t-out="volume"/></div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>

   <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="name">Inventory Batch</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_mode">tree,form,kanban,graph,gantt</field>
    </record>
</odoo>
